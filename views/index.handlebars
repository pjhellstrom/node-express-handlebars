<h1>Burgers!</h1>

<h2>Burgers to eat</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block eat=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block eat=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="input">Burger Name:</label>
    <input type="text" id="input" name="name">
  </div>

  <button type="submit" id="submit_btn">Add</button>
</form>
